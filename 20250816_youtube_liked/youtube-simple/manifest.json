{
  "manifest_version": 3,
  "name": "YouTube Video Titles",
  "version": "1.0.0",
  "description": "Simple extension to grab video titles from YouTube liked videos page",
  
  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Video Titles"
  }
}
